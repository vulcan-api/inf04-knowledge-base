<Window x:Class="INF04WzornikD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INF04WzornikD"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Cornsilk">
    <Grid>
        <Rectangle HorizontalAlignment="Center" Height="100" Margin="0,38,0,0" Stroke="Black" Fill="White" VerticalAlignment="Top" Width="728" x:Name="rect" />
        <Label Content="Dobierz kolor suwakami i zapisz przyciskiem: " HorizontalAlignment="Left" Margin="36,183,0,0" VerticalAlignment="Top" Width="289"/>
        <Slider x:Name="sliderR"  HorizontalAlignment="Center" Margin="0,233,0,0" VerticalAlignment="Top" Width="672" Minimum="0" Maximum="255" Value="255"/>
        <Slider x:Name="sliderG" HorizontalAlignment="Center" Margin="0,283,0,0" VerticalAlignment="Top" Width="672" Minimum="0" Maximum="255" Value="255"/>
        <Slider x:Name="sliderB" HorizontalAlignment="Center" Margin="0,333,0,0" VerticalAlignment="Top" Width="672" Minimum="0" Maximum="255" Value="255"/>
        <Label Content="R" HorizontalAlignment="Left" Margin="36,229,0,0" VerticalAlignment="Top"/>
        <Label Content="G" HorizontalAlignment="Left" Margin="36,279,0,0" VerticalAlignment="Top"/>
        <Label Content="B" HorizontalAlignment="Left" Margin="36,329,0,0" VerticalAlignment="Top"/>
        <Label Content="255" HorizontalAlignment="Left" Margin="741,229,0,0" VerticalAlignment="Top"/>
        <Label Content="255" HorizontalAlignment="Left" Margin="741,279,0,0" VerticalAlignment="Top"/>
        <Label Content="255" HorizontalAlignment="Left" Margin="741,329,0,0" VerticalAlignment="Top"/>
        <Button Click="btnConfirm_Click" Content="Pobierz" HorizontalAlignment="Center" Margin="0,356,0,0" VerticalAlignment="Top" Width="174" Height="26" x:Name="btnConfirm" Background="Peru"/>
        <Label BorderBrush="Black"  HorizontalAlignment="Center" Margin="0,400,0,0" VerticalAlignment="Top" Content="" Height="24" Width="97" x:Name="outputText"/>
        
    </Grid>
</Window>
