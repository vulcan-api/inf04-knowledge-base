<Window x:Class="INF04PaszportD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:INF04PaszportD"
        mc:Ignorable="d"
        Title="Wprowadzenie danych do paszportu. Wykonal 00000000000" Height="450" Width="800" Background="CadetBlue" >
    <Grid x:Name="window">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="Numer" HorizontalAlignment="Left" Margin="28,36,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="120,40,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="256" Grid.ColumnSpan="2" x:Name="inNum" LostKeyboardFocus="inNum_LostKeyboardFocus"/>
        <Label Content="Imie" HorizontalAlignment="Left" Margin="32,73,0,0" VerticalAlignment="Top"/>
        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="120,77,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="256" x:Name="inFname"/>
        <Label Content="Nazwisko" HorizontalAlignment="Left" Margin="32,0,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="120,4,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="256" x:Name="inLname"/>
        <GroupBox Grid.ColumnSpan="2" Margin="32,64,24,36" Grid.RowSpan="2" Grid.Row="1" Header=" Kolor oczu" >
        </GroupBox>
        <RadioButton x:Name="rbBlue" GroupName="eyeColor" Content="niebieski" Margin="51,90,149,99" Grid.ColumnSpan="2" Grid.RowSpan="2" Grid.Row="1"/>
        <RadioButton x:Name="rbGreen" GroupName="eyeColor" Content="zielony" Margin="51,10,149,36" Grid.ColumnSpan="2" Grid.Row="2"/>
        <RadioButton x:Name="rbHazel" GroupName="eyeColor" Content="piwny" Margin="51,39,149,39" Grid.ColumnSpan="2" Grid.Row="2"/>
        <Image Grid.Column="2" HorizontalAlignment="Center" Height="180" Margin="0,54,0,0" Grid.RowSpan="3" VerticalAlignment="Top" Width="183" Source="/000-zdjecie.png" x:Name="imgFace"/>
        <Image Grid.Column="3" HorizontalAlignment="Left" Height="180" Margin="10,54,0,0" Grid.RowSpan="3" VerticalAlignment="Top" Width="163" Source="/000-odcisk.jpg" x:Name="imgFinger"/>
        <Button Grid.Column="2" Content="OK" x:Name="btnOK" Click="btnOK_Click" HorizontalAlignment="Left" Margin="33,39,0,0" Grid.Row="2" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="34" Width="330"/>
    </Grid>
</Window>
